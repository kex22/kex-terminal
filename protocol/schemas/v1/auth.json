{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kex.sh/protocol/v1/auth.json",
  "definitions": {
    "auth": {
      "type": "object",
      "required": ["token"],
      "properties": { "token": { "type": "string" } },
      "additionalProperties": false
    },
    "auth.ok": {
      "type": "object",
      "properties": {},
      "additionalProperties": false
    },
    "auth.error": {
      "type": "object",
      "required": ["message"],
      "properties": { "message": { "type": "string" } },
      "additionalProperties": false
    }
  }
}
