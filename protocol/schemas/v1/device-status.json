{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kex.sh/protocol/v1/device-status.json",
  "definitions": {
    "device.status": {
      "type": "object",
      "required": ["syncedTerminals"],
      "properties": {
        "syncedTerminals": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "exposedPorts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["port", "public"],
            "properties": {
              "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
              "public": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
