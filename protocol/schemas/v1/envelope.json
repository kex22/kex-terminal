{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kex.dev/protocol/v1/envelope.json",
  "type": "object",
  "required": ["v", "type", "payload"],
  "properties": {
    "v": { "type": "integer", "const": 1 },
    "type": { "type": "string", "pattern": "^[a-z]+(\\.[a-z]+(-[a-z]+)*)*$" },
    "payload": { "type": "object" }
  },
  "additionalProperties": false
}
